<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!-- <a class="nav-item nav-link" href="/">Home</a> -->
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/new">Create New URL</a>
        <a class="nav-item nav-link" href="/login">Login</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
    </div>
    <div class="form-group mb2">
      <% if (user) { %>
        <p>Logged in as: <%= user.email %>!</p>
        <form class="form-inline" action="/logout" method="POST">
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
        <% } else { %>
          <a  href="/login"><form class="btn btn-primary" action="/login" method="get">Log In</form></a>
          <% } %>
    </div>
  </nav>
</header>